{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/strict",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "jsx-a11y",
    "prettier"
  ],
  "ignorePatterns": ["node_modules", "dist", ".next", "next.config.js", "public"],
  "rules": {
    "prettier/prettier": "error"
  }
}
